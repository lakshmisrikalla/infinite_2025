@model IEnumerable<Client_model.Models.PaymentVm>

@{
    ViewBag.Title = "Payments";
}

<div class="card card-soft">
    <div class="card-body">
        <h5 class="mb-3"><i class="bi bi-currency-rupee me-2"></i>Payments</h5>

        @if (!String.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-warning">@ViewBag.Error</div>
        }

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Holder</th>
                    <th>Policy</th>
                    <th>Amount</th>
                    <th>Mode</th>
                    <th>Status</th>
                    <th>Paid At</th>
                    <th>Ref</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@Html.Encode(p.Holder)</td>
                            <td>@Html.Encode(p.Policy)</td>
                            <td>₹@p.Amount.ToString("N2")</td>
                            <td>@Html.Encode(p.Mode)</td>
                            <td>@Html.Encode(p.Status)</td>
                            <td>@p.PaidAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@Html.Encode(p.GatewayRef)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="7" class="text-center">No payments found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
