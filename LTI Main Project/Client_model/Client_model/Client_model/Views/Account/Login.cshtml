@model Client_model.Models.LoginVm
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";  // or your auth layout
}

<div class="container">
    <div class="card auth-card">
        <div class="row no-gutters">
            <div class="col-md-5 auth-left d-flex flex-column justify-content-center align-items-center text-white">
                <i class="bi bi-shield-lock display-1 mb-3"></i>
                <h2>Welcome back</h2>
                <p>Sign in to manage policies, claims and customers.</p>
            </div>

            <div class="col-md-7 auth-right p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Show validation errors -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CompanyCode)
                        @Html.TextBoxFor(m => m.CompanyCode, new { @class = "form-control", placeholder = "Enter company code" })
                        <small class="form-text text-muted">Company code was emailed when you registered.</small>
                        @Html.ValidationMessageFor(m => m.CompanyCode, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign in</button>

                    <div class="mt-3 d-flex justify-content-between">
                        <a href="@Url.Action("Forgot","Account")">Forgot password?</a>
                        <a href="@Url.Action("Register","Account")">Create account</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
