@model List<LTI.Models.PolicyViewModel>
@{
    Layout = null;
    var filter = ViewBag.TypeFilter as string ?? "All";
}

<!DOCTYPE html>
<html>
<head>
    <title>Buy Insurance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container mt-4">
    <h2>Buy Insurance</h2>

    <form method="get" action="/User/BuyInsurance" class="mb-3">
        <label>Filter by Type:</label>
        <select name="typeFilter" onchange="this.form.submit()" class="form-select w-25 d-inline-block">
            <option value="All" @(filter == "All" ? "selected" : "")>All</option>
            <option value="Motor" @(filter == "Motor" ? "selected" : "")>Motor</option>
            <option value="Travel" @(filter == "Travel" ? "selected" : "")>Travel</option>
        </select>
    </form>

    <div class="row">
        @foreach (var policy in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@policy.PolicyName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@policy.TypeName Insurance by @policy.CompanyName</h6>
                        <p class="card-text">@policy.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Plan: @policy.PlanKind</li>
                            <li class="list-group-item">Duration: @policy.DurationMonths months</li>
                            <li class="list-group-item">Premium: ₹@policy.BasePremium</li>
                        </ul>
                        <div class="mt-3">
                            <a href="/User/BuyNow/@policy.PolicyID" class="btn btn-success">Buy Now</a>
                            <a href="@Url.Action("SubmitDocuments", "User", new { policyId = policy.PolicyID })" class="btn btn-outline-secondary">
                                📎 Submit Documents
                            </a>

                           

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>


