@{
    Layout = "~/Views/User/UserLayout.cshtml";
    ViewBag.Title = "Verify Code";
}

<h2>Verify Code</h2>

<form method="post" action="@Url.Action("VerifyResetCode", "User")">
    <label>Enter the code sent to your email:</label>
    <input type="text" name="code" class="form-control" required />
    <button type="submit" class="btn btn-primary mt-2">Verify</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="text-danger mt-2">@ViewBag.Error</div>
}
