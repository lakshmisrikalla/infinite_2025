@{
    Layout = null;
    var name = ViewBag.FullName as string;
    bool isLoggedIn = !string.IsNullOrEmpty(name);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>LTI Insurance Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .dashboard-card {
            max-width: 700px;
            margin: auto;
            margin-top: 50px;
            padding: 30px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .list-group-item a {
            text-decoration: none;
            color: #0d6efd;
        }

            .list-group-item a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="dashboard-card text-center">
        @if (isLoggedIn)
        {
            <h2>Welcome, @name 👋</h2>
            <p>Select an option below to manage your insurance:</p>
            <ul class="list-group text-start">
                <li class="list-group-item"><a href="/User/BrowseInsurance">🧭 Browse Insurance</a></li>
                <li class="list-group-item"><a href="/User/BuyInsurance">🛒 Buy Insurance</a></li>
                <li class="list-group-item"><a href="/User/ClaimInsurance">📝 Claim Insurance</a></li>
                <li class="list-group-item"><a href="/User/RenewInsurance">🔁 Renew Insurance</a></li>
            </ul>
            <div class="mt-4">
                <a href="/User/Logout" class="btn btn-outline-danger">Logout</a>
            </div>
        }
        else
        {
            <h1>Welcome to LTI</h1>
            <a href="/User/Login" class="btn btn-primary mt-3">User Login</a>
        }
    </div>
</body>
</html>

