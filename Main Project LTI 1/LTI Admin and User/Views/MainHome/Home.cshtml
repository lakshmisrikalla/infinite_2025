@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - LTI Insurance System</title>

    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden;
        }

        .custom-modal-header {
            background: linear-gradient(135deg, #5a009d, #00ccff);
        }

        .video-bg {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            z-index: -2;
            object-fit: cover;
        }

        .gradient-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(90, 0, 157, 0.6), rgba(0, 204, 255, 0.4));
            z-index: -1;
        }

        .top-banner {
            background-color: #0dcaf0;
            color: #ffffff;
            text-align: center;
            padding: 8px;
            font-weight: 600;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .navbar-brand img {
            height: 40px;
        }

        .hero-section {
            padding: 80px 20px 40px;
            text-align: center;
            color: white;
        }

            .hero-section h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-bottom: 30px;
            }

        .animate-up {
            opacity: 0;
            transform: translateY(40px);
            transition: all 0.8s ease-out;
        }

            .animate-up.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .carousel-caption {
            bottom: 20px;
        }

            .carousel-caption h5 {
                font-size: 1.5rem;
                font-weight: bold;
            }

            .carousel-caption p {
                font-size: 1rem;
            }

        .login-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            cursor: pointer;
            color: #333;
        }

            .login-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 20px rgba(0,0,0,0.15);
            }

        .login-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .login-title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        footer {
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
        }
    </style>
</head>
<body>

    <!-- 🌈 Gradient Overlay -->
    <div class="gradient-overlay"></div>

    <!-- 🔔 Top Banner -->
    <div class="top-banner">
        Final Days: Claim your insurance bonus as early as possible! 🚀
    </div>

    <!-- 🔷 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark px-4">
        <a class="navbar-brand" href="#">
            <img src="@Url.Content("~/Images/logo.jpg")" alt="LTI Logo" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ltiNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="ltiNavbar">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Home", "MainHome")">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "MainHome")">About</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "MainHome")">Contact</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Help", "MainHome")">Help</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("FAQ", "MainHome")">FAQ</a></li>
            </ul>
            <div class="d-flex">
                <button class="btn btn-outline-light me-2" data-bs-toggle="modal" data-bs-target="#loginModal">Sign In</button>
                <button class="btn btn-light text-dark" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
            </div>

        </div>
    </nav>

    <!-- 🎯 Hero Section -->
    <div class="hero-section">
        <h1 class="animate-up">LTI Insurance System</h1>
        <p class="animate-up">No agents. No paperwork. Just smart, secure insurance at your fingertips.</p>
        <button class="btn btn-lg btn-light text-dark px-5 animate-up" data-bs-toggle="modal" data-bs-target="#loginModal">Get Started</button>
    </div>

    <!-- 🖼️ Slideshow Carousel -->
    <div id="ltiCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/Images/img1.jpg")" class="d-block w-100" style="height:450px; object-fit:cover;" alt="Digital Insurance" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Digital Insurance Made Simple</h5>
                    <p>Buy, renew, and claim policies online with zero hassle.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Images/img2.jpg")" class="d-block w-100" style="height:450px; object-fit:cover;" alt="Secure Insurance" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Secure & Transparent</h5>
                    <p>Every transaction is logged and traceable for peace of mind.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Images/img3.jpg")" class="d-block w-100" style="height:450px; object-fit:cover;" alt="Customer Focus" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Customer First</h5>
                    <p>Designed for users, clients, and admins to work in harmony.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#ltiCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#ltiCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- 🔐 Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content text-dark">
                <div class="modal-header custom-modal-header text-white">
                    <h5 class="modal-title" id="loginModalLabel">Choose Login Type</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-4 justify-content-center">
                        <div class="col-md-4">
                            <a href="@Url.Action("Login", "User")" class="text-decoration-none">
                                <div class="login-card">
                                    <i class="bi bi-person-circle login-icon text-primary"></i>
                                    <div class="login-title">User Login</div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                                <div class="login-card">
                                    <i class="bi bi-shield-lock login-icon text-success"></i>
                                    <div class="login-title">Admin Login</div>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 📝 Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content text-dark">
                <div class="modal-header custom-modal-header text-white">
                    <h5 class="modal-title" id="registerModalLabel">Choose Register Type</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-4 justify-content-center">
                        <div class="col-md-4">
                            <a href="@Url.Action("Register", "User")" class="text-decoration-none">
                                <div class="login-card">
                                    <i class="bi bi-person-plus login-icon text-primary"></i>
                                    <div class="login-title">User Register</div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("RegisterAdmin", "Account")" class="text-decoration-none">
                                <div class="login-card">
                                    <i class="bi bi-shield-plus login-icon text-success"></i>
                                    <div class="login-title">Admin Register</div>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧾 Footer -->
    <footer class="text-center py-3">
        <p class="mb-0">© 2025 LTI Insurance System. All rights reserved.</p>
        <small>Built for smarter insurance management.</small>
    </footer>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✨ Scroll Animation Script -->
    <script>
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.animate-up').forEach(el => {
            observer.observe(el);
        });
    </script>
</body>
</html>
