@model IEnumerable<LTI.Models.ViewModels.PendingPolicyVM>

@{ 
    Layout = "~/Views/User/UserLayout.cshtml";
    ViewBag.Title = "Pending Policies";
    }

<h2>Pending / Unpaid Policies</h2>

<table class="table table-bordered table-striped">

    <thead>

        <tr>

            <th>Policy Name</th>

            <th>Insurance Type</th>

            <th>Status</th>

            <th>Payment Status</th>

            <th>Start Date</th>

            <th>End Date</th>

            <th>Base Premium</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var policy in Model)

        {

<tr>

    <td>@policy.PolicyName</td>

    <td>@policy.InsuranceType</td>

    <td>@policy.Status</td>

    <td>@policy.PaymentStatus</td>

    <td>@policy.StartDate.ToShortDateString()</td>

    <td>@policy.EndDate.ToShortDateString()</td>

    <td>@policy.BasePremium</td>

</tr>}

    </tbody>

</table>

