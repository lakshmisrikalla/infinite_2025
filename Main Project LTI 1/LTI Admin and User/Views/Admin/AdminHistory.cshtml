@model List<LTI.Models.AuditLogVm>
@{ 
    Layout = "~/Views/Admin/AdminLayout.cshtml";
    ViewBag.Title = "Admin History"; }

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">🕒 Admin History</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Time (UTC)</th>
                            <th>Admin</th>
                            <th>Action</th>
                            <th>Target</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var log in Model)
                            {
            <tr>
                <td>@log.AuditID</td>
                <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@log.AdminName</td>
                <td>@log.ActionType</td>
                <td>@(string.IsNullOrEmpty(log.TargetType) ? "-" : log.TargetType + (log.TargetID.HasValue ? (" #" + log.TargetID) : ""))</td>
                <td>@(string.IsNullOrEmpty(log.Details) ? "-" : log.Details)</td>
            </tr> }
                        }
                        else
                        {
            <tr><td colspan="6" class="text-center text-muted">No audit logs found.</td></tr>}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
