@{
    ViewBag.Title = "Client & Document Management";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h3 class="text-center">Client & Document Management</h3>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 g-4">

                <!-- 👥 Manage Clients -->
                <div class="col">
                    <a href="@Url.Action("ManageClients", "Admin")" class="btn btn-outline-primary w-100 py-3">
                        👥 Manage Clients
                    </a>
                </div>

                <!-- 🔍 Apply Dynamic Filters -->
                <div class="col">
                    <a href="@Url.Action("ApplyDynamicFilters", "Admin")" class="btn btn-outline-info w-100 py-3">
                        🔍 Apply Dynamic Filters
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
