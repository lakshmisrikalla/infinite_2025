@model Client_model.Models.ForgotVm
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewBag.Title = "Forgot password";
}
<div class="card auth-card">
    <div class="row g-0 w-100">
        <div class="col-md-5 auth-left">
            <div class="auth-icon"><i class="bi bi-key-fill"></i></div>
            <h2 class="mt-2">Forgot password</h2>
            <p>We’ll generate a temporary password and email it to your company contact.</p>
        </div>

        <div class="col-md-7 auth-right">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-info-compact">@TempData["Success"]</div>
            }

            @using (Html.BeginForm("Forgot", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Registered email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.CompanyName)
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Company name" })
                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                </div>

                <button class="btn btn-primary btn-block w-100">Send temporary password</button>

                <div class="mt-3"><a href="@Url.Action("Login","Account")">Back to login</a></div>
            }
        </div>
    </div>
</div>
