@{
    Layout = null;
    var appTitle = "LTI Insurance — Client Portal";
    var currentClientId = Client_model.Helpers.ClientContext.CurrentClientId;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@appTitle - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />

    <style>
        /* Sidebar styling */
        .sidebar {
            width: 240px;
            background: linear-gradient(180deg, #0a2342, #032539);
            min-height: 100vh;
            color: #fff;
        }

            .sidebar .nav-link {
                color: #cfd8dc;
                border-radius: .375rem;
                padding: .65rem 1rem;
                font-size: 0.95rem;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255,255,255,0.1);
                    color: #fff;
                }

            .sidebar h5 {
                font-size: 1.1rem;
                margin-bottom: 1rem;
                font-weight: 600;
            }

        .card-soft {
            border: none;
            border-radius: .75rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        }

        /* Logo styling */
        .brand-logo {
            width: 38px;
            height: 38px;
            object-fit: contain;
            border-radius: 6px;
            background: rgba(255,255,255,0.03);
            padding: 4px;
        }

        .brand-logo-sm {
            width: 24px;
            height: 24px;
            object-fit: contain;
        }

        body.dark {
            background: #121212;
            color: #e0e0e0;
        }

            body.dark .navbar {
                background: #1e1e1e !important;
                border-color: #333;
            }

            body.dark .sidebar {
                background: linear-gradient(180deg, #000814, #001d3d);
            }

            body.dark .card-soft {
                background: #1e1e1e;
                color: #e0e0e0;
            }
    </style>
</head>
<body class="bg-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="sidebar p-3">
            <div class="d-flex align-items-center mb-2">
                <img src="~/Content/logo.jpg" alt="LTI Insurance" class="brand-logo me-2" />
                <h5 class="text-white mb-0">Client Panel</h5>
            </div>
            <ul class="nav nav-pills flex-column gap-1 mt-3">
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Dashboard"?"active":"")" href="@Url.Action("Index","Dashboard")"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Policies"?"active":"")" href="@Url.Action("Index","Policies")"><i class="bi bi-card-checklist"></i> My Policies</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Policy Holders"?"active":"")" href="@Url.Action("Index","PolicyHolders")"><i class="bi bi-people"></i> Policy Holders</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Claims"?"active":"")" href="@Url.Action("Index","Claims")"><i class="bi bi-clipboard2-pulse"></i> Claims</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Renewals"?"active":"")" href="@Url.Action("Index","Renewals")"><i class="bi bi-arrow-repeat"></i> Renewals</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Due Dates"?"active":"")" href="@Url.Action("Index","DueDates")"><i class="bi bi-calendar-event"></i> Due Dates</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Approvals"?"active":"")" href="@Url.Action("Index","Approvals")"><i class="bi bi-patch-question"></i> User Approvals</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Payments"?"active":"")" href="@Url.Action("Index","Payments")"><i class="bi bi-currency-rupee"></i> Payments</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Reports"?"active":"")" href="@Url.Action("Index","Reports")"><i class="bi bi-graph-up"></i> Reports & Analytics</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Messages"?"active":"")" href="@Url.Action("Index","Messages")"><i class="bi bi-chat-dots"></i> Messages</a></li>
                <li class="nav-item"><a class="nav-link @(ViewBag.Title=="Profile"?"active":"")" href="@Url.Action("MyProfile","Client")"><i class="bi bi-person-badge"></i> Profile</a></li>
                <li class="nav-item"><a class="nav-link text-danger" href="@Url.Action("Logout","Account")"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
            </ul>
        </aside>

        <!-- Main -->
        <main class="flex-grow-1">
            <!-- Navbar -->
            <nav class="navbar navbar-light bg-white shadow-sm px-3">
                <span class="navbar-brand mb-0 h5 d-flex align-items-center">
                    <img src="~/Content/logo.jpg" alt="LTI" class="brand-logo-sm me-2" />
                    @appTitle
                </span>
                <div class="d-flex gap-3 align-items-center">
                    @if (currentClientId != null)
                    {
                        <!-- Profile icon instead of toggle -->
                        <a href="@Url.Action("MyProfile","Client")" class="btn btn-sm btn-outline-primary rounded-circle" title="My Profile">
                            <i class="bi bi-person-circle"></i>
                        </a>
                    }
                </div>
            </nav>

            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Core scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- Render per-page scripts (optional) -->
    @RenderSection("Scripts", required: false)
</body>
</html>
