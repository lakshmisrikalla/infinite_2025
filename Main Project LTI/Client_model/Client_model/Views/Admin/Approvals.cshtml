@model IEnumerable<dynamic>
@{ ViewBag.Title = "Client Approvals"; }
<h3>Pending Client Approvals</h3>

<table class="table">
    <thead><tr><th>Company</th><th>Email</th><th>Registered</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CompanyName</td>
                <td>@c.ContactEmail</td>
                <td>@((System.DateTime)c.RegisteredAt).ToString("yyyy-MM-dd")</td>
                <td>
                    @using (Html.BeginForm("Approve", "Admin", FormMethod.Post))
                    {
                        @Html.Hidden("id", (int)c.ClientID)
                        <button class="btn btn-sm btn-success">Approve</button>
                    }
                    @using (Html.BeginForm("Reject", "Admin", FormMethod.Post))
                    {
                        @Html.Hidden("id", (int)c.ClientID)
                        <button class="btn btn-sm btn-danger">Reject</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
