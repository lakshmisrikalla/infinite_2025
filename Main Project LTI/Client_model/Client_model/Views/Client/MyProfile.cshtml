@model Client_model.Models.ProfileEditVm
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // keep your main layout
}

<div class="card card-soft">
    <div class="card-body">
        <div class="row">
            <!-- Left: editable form -->
            <div class="col-lg-6">
                <h1 class="display-5">@(Model.CompanyName ?? "Company")</h1>
                <p class="text-muted">Manage your company details here. Use the Change Password link to update your password.</p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @using (Html.BeginForm("MyProfile", "Client", FormMethod.Post, new { @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ContactEmail, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control", type = "email" })
                        @Html.ValidationMessageFor(m => m.ContactEmail, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ContactPhone, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ContactPhone, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex gap-2 align-items-center mt-3">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <a class="btn btn-outline-secondary" href="@Url.Action("ChangePassword","Account")">Change Password</a>
                        <a class="btn btn-light" href="@Url.Action("Index","Dashboard")">Go to Dashboard</a>
                    </div>
                }
            </div>

            <!-- Right: overview -->
            <div class="col-lg-6">
                <h5>Overview</h5>

                <div class="row g-2 mb-3">
                    <div class="col-4">
                        <div class="p-3 card-soft text-center">
                            <div class="text-muted">Policies</div>
                            <div class="h2 mb-0">@ViewBag.PoliciesCount</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 card-soft text-center">
                            <div class="text-muted">Active Policies</div>
                            <div class="h2 mb-0">@ViewBag.ActivePoliciesCount</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 card-soft text-center">
                            <div class="text-muted">Policy Holders</div>
                            <div class="h2 mb-0">@ViewBag.HoldersCount</div>
                        </div>
                    </div>
                </div>

                <h5 class="mt-4">Company Details</h5>
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th class="ps-0">Company Name</th>
                            <td class="text-end pe-0">@Model.CompanyName</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Registered At</th>
                            <td class="text-end pe-0">@((ViewBag.RegisteredAt != null) ? ((System.DateTime)ViewBag.RegisteredAt).ToString("yyyy-MM-dd") : "—")</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Company Code</th>
                            <td class="text-end pe-0">@((ViewBag.CompanyCode != null) ? ViewBag.CompanyCode.ToString() : "—")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
